{
  "name": "gh-profile",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "deploy": "next build && next start",
    "lint": "next lint",
    "format": "prettier --write . --ignore-path .gitignore",
    "prepare": "husky",
    "commit": "cz"
  },
  "dependencies": {
    "@douyinfe/semi-icons": "2.80.0",
    "@douyinfe/semi-icons-lab": "2.80.0",
    "@douyinfe/semi-ui": "2.80.0",
    "mysql2": "3.14.1",
    "next": "15.3.3",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.3.1",
    "@tailwindcss/postcss": "4.1.8",
    "@types/node": "22.15.29",
    "@types/react": "19.1.6",
    "@types/react-dom": "19.1.5",
    "commitizen": "4.3.1",
    "cz-emoji": "1.3.2-canary.2",
    "eslint": "9.28.0",
    "eslint-config-next": "15.3.3",
    "husky": "9.1.7",
    "lint-staged": "16.1.0",
    "prettier": "3.5.3",
    "tailwindcss": "4.1.8",
    "typescript": "5.8.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    }
  }
}
